{% extends ea.templatePath('layout') %}

{% trans_default_domain "EasyAdminBundle" %}

{% trans_default_domain ea.i18n.translationDomain %}
{% block content_footer_wrapper '' %}

{% block content_title %}
	TeamPenta
{% endblock %}


{% block body %}
	{% block main %}
		<div class="report-text display" id="reportDisplay">

			<div class="penta-wrapper team-penta">

				<h1>Team Penta Auswertung</h1>

				<ul class="penta-list">
					{% for bodygraph in teamPenta.bodygraphs %}
						<li>
							{{bodygraph.name}}
						</li>
					{% endfor %}
				</ul>

				<div class="hex-grid__list">

					<div class="penta hex-grid__item penta-placeholder"></div>
					<div class="penta hex-grid__item penta-placeholder"></div>

					<div class="penta hex-grid__item penta-8 {{ (teamPenta.presence > 0) ? 'active' : '' }}">
						<div class="penta-content">
							<div class="penta-gate">8</div>
							<div class="penta-title">Präsenz</div>
							<div class="penta-counter">{{teamPenta.presence}}</div>
						</div>
					</div>

					<div class="penta hex-grid__item penta-placeholder"></div>
					<div class="penta hex-grid__item penta-placeholder"></div>


					<div class="penta hex-grid__item penta-31 {{ (teamPenta.structure > 0) ? 'active' : '' }}">
						<div class="penta-content">

							<div class="penta-gate">31</div>
							<div class="penta-title">Struktur</div>
							<div class="penta-counter">{{teamPenta.structure}}</div>
						</div>
					</div>

					<div class="penta hex-grid__item penta-placeholder"></div>

					<div class="penta hex-grid__item penta-1 {{ (teamPenta.execution > 0) ? 'active' : '' }}">
